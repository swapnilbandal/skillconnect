package com.skillConnect.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.List;
import java.util.Optional;

@Service
public class BidService {

    @Autowired
    private BidRepository bidRepository;

    @Autowired
    private ProjectRepository projectRepository;

    @Autowired
    private FreelancerRepository freelancerRepository;

    public Bid placeBid(Bid bid, Long projectId, Long freelancerId) {
        Optional<Project> project = projectRepository.findById(projectId);
        Optional<Freelancer> freelancer = freelancerRepository.findById(freelancerId);
        if (project.isPresent() && freelancer.isPresent()) {
            bid.setProject(project.get());
            bid.setFreelancer(freelancer.get());
            return bidRepository.save(bid);
        }
        return null;
    }

    public Optional<Bid> getBidById(Long id) {
        return bidRepository.findById(id);
    }

    public List<Bid> getAllBids() {
        return bidRepository.findAll();
    }

    public Bid updateBid(Long id, Bid updatedBid) {
        if (bidRepository.existsById(id)) {
            updatedBid.setId(id);
            return bidRepository.save(updatedBid);
        }
        return null;
    }

    public void deleteBid(Long id) {
        bidRepository.deleteById(id);
    }

    // Additional methods if needed
}
